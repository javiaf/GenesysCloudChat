<Window x:Class="GenesysCloudChat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenesysCloudChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox
  Name="tbConversation"
  TextWrapping="Wrap"
  AcceptsReturn="True"
  VerticalScrollBarVisibility="Visible" Margin="47,35,115.6,106"
   IsReadOnly = "True">
        </TextBox>
        <TextBox
            x:Name="tbMessage"
            TextWrapping="Wrap"
            AcceptsReturn="False"
             Margin="47,344,150.6,33" KeyDown="TbMessage_KeyDown"></TextBox>
        <Button Content="Send" HorizontalAlignment="Left" Margin="670,368,0,0" VerticalAlignment="Top" Width="75" Click="Send_Click"/>
        <Button Name="EndBtn" Content="End Chat" HorizontalAlignment="Left" Margin="670,344,0,0" VerticalAlignment="Top" Width="75" Click="End_Click"/>
        <Button x:Name="StopBotBtn" Content="Stop Bot" HorizontalAlignment="Left" Margin="695,227,0,0" VerticalAlignment="Top" Width="75" Click="StopBot_Click"/>

    </Grid>
</Window>
